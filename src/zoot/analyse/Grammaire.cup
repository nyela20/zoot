/* ------------Declaration of Terminals and Non Terminals Section----------- */

/* Terminals (tokens returned by the scanner).  */

terminal Symbol    DEBUT, FIN, VARIABLES, POINTVIRGULE, ECRIRE, EGAL;
terminal String    IDF, CSTENTIERE, CSTBOOLEENNE, ENTIER, BOOLEEN ;

/* Non terminals used in the grammar section.  */

non terminal ArbreAbstrait PROG, LINST, LDCL;
non terminal Instruction INST, DCL ;
non terminal Expression EXP ;
non terminal String TYPE;

/* ----------------------------Grammar Section-------------------- */

start with PROG ;

PROG    ::=     VARIABLES LDCL:lv DEBUT  LINST:li  FIN
                {: RESULT = li; :}
        |
                DEBUT  LINST:li  FIN
                {: RESULT = li; :}
                ;

LDCL    ::=     LDCL:ld DCL:d
                {: ((BlocDInstructions)ld).ajouter(d) ;
                    RESULT = ld ; :}
        |
                DCL:d
                {: BlocDInstructions b = new BlocDInstructions(dleft + 1) ;
                   b.ajouter(d) ;
                   RESULT = b ; :}
                ;

DCL     ::=    TYPE:t IDF:i POINTVIRGULE
               {: TDS.getInstance().ajouter(i, new Symbole(t)) ; :}
                ;

LINST   ::=     LINST:li  INST:i
                {: ((BlocDInstructions)li).ajouter(i) ;
                   RESULT = li ; :}
        |
                INST:i
                {: BlocDInstructions b = new BlocDInstructions(ileft + 1) ;
                   b.ajouter(i) ;
                   RESULT = b ; :}
                   ;

INST    ::=     ECRIRE EXP:e POINTVIRGULE
                {: RESULT = new Ecrire(e, eleft + 1) ; :}
        |
              IDF:i EGAL EXP:e POINTVIRGULE
              {: RESULT = new Affectation(new Identifiant(i,ileft+1), e, eleft+1) ; :}
              ;


EXP    ::=     CSTENTIERE:c
               {: RESULT = new ConstanteEntiere(c, cleft + 1) ; :}
        |
               CSTBOOLEENNE:c
               {: RESULT = new ConstanteBooleenne(c, cleft + 1) ; :}
        |
               IDF:i
               {: RESULT = new Identifiant(i, ileft + 1) ; :}
                ;

TYPE    ::=     ENTIER
                {: RESULT = "entier"; :}
                |
                BOOLEEN
                {: RESULT = "booleen"; :}
                ;

